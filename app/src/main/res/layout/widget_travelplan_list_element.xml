<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_travelplan_list_item_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/widget_travelplan_list_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:id="@+id/widget_travelplan_list_item_lin1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/widget_travelplan_list_item_lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/widget_travelplan_list_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Kl. 21:00 - 23:00"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_travelplan_list_item_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(120 minutter)"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_travelplan_list_item_lin3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="64dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/widget_travelplan_list_item_entries_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"></LinearLayout>

                <ImageView
                    android:id="@+id/widget_travelplan_list_item_more"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_more_vert_24" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>