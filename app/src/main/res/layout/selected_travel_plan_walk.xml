<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selected_travel_plan_walk_lin_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/selected_travel_plan_walk_lin_container_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/selected_travel_plan_walk_frame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/selected_travel_plan_walk_line_view"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/darker_gray" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/selected_travel_plan_walk_lin_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="32dp" />

            <LinearLayout
                android:id="@+id/selected_travel_plan_walk_lin_stop_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/selected_travel_plan_walk_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minHeight="40dp"
                    app:srcCompat="@drawable/ic_baseline_directions_walk_24"
                    android:contentDescription="TODO" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/selected_travel_plan_walk_tw_stop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Some Bus Terminal B"
                    android:textAlignment="gravity"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/selected_travel_plan_walk_lin_time_dist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/selected_travel_plan_walk_tw_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="GÃ¥ i ca. 5 min."
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/selected_travel_plan_walk_tw_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(500 meter)" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/selected_travel_plan_walk_tw_end_stop_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="22:00"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/selected_travel_plan_walk_tw_end_stop_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Some End Stop Name B"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>