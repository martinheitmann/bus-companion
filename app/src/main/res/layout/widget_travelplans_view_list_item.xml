<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/widget_travel_plan_list_item_lin1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/widget_travel_plan_list_item_lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_travel_plan_list_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Kl. 21:00 - 23:00"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_travel_plan_list_item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(120 minutter)"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_travel_plan_list_item_lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/widget_travel_plan_list_item_lin_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"></LinearLayout>

            <ImageButton
                android:id="@+id/widget_travel_plan_list_item_button_more"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_more_vert_24" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>